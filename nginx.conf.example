# Nginx配置示例 - 用于1Panel
# 将此配置添加到您的网站配置中

server {
    listen 80;
    listen [::]:80;
    server_name 你的域名.com www.你的域名.com;

    # 如果已配置SSL，重定向到HTTPS
    # return 301 https://$server_name$request_uri;

    # 日志
    access_log /var/log/nginx/forge-duel-access.log;
    error_log /var/log/nginx/forge-duel-error.log;

    # 客户端最大上传大小
    client_max_body_size 10M;

    # 反向代理到Node.js应用
    location / {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        
        # WebSocket支持（Socket.IO需要）
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # 转发真实IP
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 超时设置（Socket.IO长连接）
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # 静态资源缓存
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|mp3|wav)$ {
        proxy_pass http://127.0.0.1:8080;
        expires 7d;
        add_header Cache-Control "public, immutable";
    }

    # Gzip压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript 
               application/x-javascript application/xml+rss 
               application/json application/javascript;
}

# HTTPS配置（SSL证书配置后启用）
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name 你的域名.com www.你的域名.com;

    # SSL证书（1Panel会自动配置）
    ssl_certificate /path/to/cert.pem;
    ssl_certificate_key /path/to/key.pem;
    
    # SSL优化
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # 日志
    access_log /var/log/nginx/forge-duel-ssl-access.log;
    error_log /var/log/nginx/forge-duel-ssl-error.log;

    # 客户端最大上传大小
